<h1>Upload photos for your <%= link_to @storage.title, storage_path(@storage) %></h1>

<%= simple_form_for [@storage, @photo] do |f|  %>
  <%= f.input :data, label: false %>
  <%= f.input :data_cache, as: :hidden %>
  <%= f.submit 'Add photo' %>
<% end %>




<%  @photos.each do |photo| %>
  <%= cl_image_tag photo.data, id: 'photo_upload' %>
